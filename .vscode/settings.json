{
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue",
    "typescript",
    "typescriptreact"
  ],

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
 
  "editor.tabSize": 2,
  "typescript.tsdk": "node_modules/typescript/lib",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#ffffff20",
    "activityBar.activeBorder": "#25320e",
    "activityBar.background": "#3f094d",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#25320e",
    "activityBarBadge.foreground": "#e7e7e7",
    "statusBar.background": "#610e75",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#7a30ab",
    "titleBar.activeBackground": "#3f094d",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#451b5099",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "git.openRepositoryInParentFolders": "always",
}
